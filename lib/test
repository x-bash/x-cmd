
# load in need

x log init test

___x_cmd_test(){
   ___x_cmd_test_main "$@"
}

___x_cmd_test_main(){
    local target="${1}"
    if [ -z "$target" ]; then
        target="$(x wsroot)/.x-cmd/testcase"
    fi
    if [ ! -d "$target" ]; then
        test:warn "Expecting to be folder: $target"
        return 1
    fi
    cd "$target" && ___x_cmd_test_folder "$(pwd)"
}

___x_cmd_test_folder(){
    test:info "Test: $(basename "$target")"
    local testcase
    for testcase in *; do
        case "$testcase" in
            setup|teardown)         continue ;;
        esac
        if [ -f "$testcase" ]; then
            (
                . ./setup
                . "$testcase"
                . ./teardown
            )
        elif [ -d "$testcase" ]; then
            (
                cd "$testcase" && (
                    . ./setup
                    ___x_cmd_test_folder "$(pwd)"
                    . ./teardown
                )
            )
        else
            :
        fi
    done
}
